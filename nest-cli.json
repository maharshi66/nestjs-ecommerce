{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/ecommerce/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/ecommerce/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/ecommerce",
  "projects": {
    "ecommerce": {
      "type": "application",
      "root": "apps/ecommerce",
      "entryFile": "main",
      "sourceRoot": "apps/ecommerce/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ecommerce/tsconfig.app.json"
      }
    },
    "order-management": {
      "type": "application",
      "root": "apps/order-management",
      "entryFile": "main",
      "sourceRoot": "apps/order-management/src",
      "compilerOptions": {
        "tsConfigPath": "apps/order-management/tsconfig.app.json"
      }
    },
    "customer-service": {
      "type": "application",
      "root": "apps/customer-service",
      "entryFile": "main",
      "sourceRoot": "apps/customer-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/customer-service/tsconfig.app.json"
      }
    },
    "invoice-service": {
      "type": "application",
      "root": "apps/invoice-service",
      "entryFile": "main",
      "sourceRoot": "apps/invoice-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/invoice-service/tsconfig.app.json"
      }
    }
  }
}